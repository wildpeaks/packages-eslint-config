{
	"compilerOptions": {
		"newLine": "LF",

		"strict": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"useDefineForClassFields": true,

		"allowJs": true,
		"checkJs": true,
		"noEmit": true,

		"jsx": "react-jsx",
		"jsxImportSource": "preact",

		"lib": ["es2020", "dom"],
		"module": "es2020",
		"target": "es2017",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"removeComments": true,
		"sourceMap": true
	},
	"include": [
		"./tmp/*.*"
	]
}
